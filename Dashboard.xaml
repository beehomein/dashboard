                </StackPanel>
            </Grid>
            <!--Payment Methods-->
            <Grid Grid.Column="2" Grid.ColumnSpan="3" Name="PaymentMethods" VerticalAlignment="Bottom" Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"></RowDefinition>
                    <RowDefinition Height="85"></RowDefinition>
                    <RowDefinition Height="85"></RowDefinition>
                    <RowDefinition Height="85"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock FontWeight="Bold" FontSize="20" Margin="5,10" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Width="150" HorizontalAlignment="Right" VerticalAlignment="Center">
