                </TextBlock>
                <TextBox KeyDown="addProduct" Grid.Row="0" VerticalAlignment="Center" Grid.Column="2" Grid.ColumnSpan="2" FontSize="18" Padding="5" Margin="5,10" BorderBrush="Black" Height="40"></TextBox>

                <Button FontSize="18" Grid.Column="0"  Margin="5,10,5,0" Grid.Row="1" Style="{DynamicResource n}" Foreground="White" Cursor="Hand">Cash</Button>
                <Button FontSize="18" Grid.Column="1"  Margin="5,10,5,0" Grid.Row="1" Style="{DynamicResource n}" Foreground="White" Cursor="Hand">Credit</Button>
                <Button FontSize="18" Grid.Column="2"  Margin="5,10,5,0" Grid.Row="1" Style="{DynamicResource n}" Foreground="White" Cursor="Hand">InfraPay</Button>
                <Button FontSize="18" Grid.Column="3"  Margin="5,10,5,0" Grid.Row="1" Style="{DynamicResource n}" Foreground="White" Cursor="Hand">
                    <TextBlock TextWrapping="WrapWithOverflow">InfraPay Reco</TextBlock> </Button>
                <Button FontSize="18" Grid.Column="0"  Margin="5,10,5,0" Grid.Row="2" Style="{DynamicResource n}" Foreground="White" Cursor="Hand">UPI</Button>
                <Button FontSize="18" Grid.Column="1"  Margin="5,10,5,0" Grid.Row="2" Style="{DynamicResource n}" Foreground="White" Cursor="Hand">Gift Card</Button>
                <Button FontSize="18" Grid.Column="2"  Margin="5,10,5,0" Grid.Row="2" Style="{DynamicResource n}" Foreground="White" Cursor="Hand">Paytm</Button>
                <Button FontSize="18" Grid.Column="3"  Margin="5,10,5,0" Grid.Row="2" Style="{DynamicResource n}" Foreground="White" Cursor="Hand">
                    <TextBlock TextWrapping="WrapWithOverflow">Omini Tenders</TextBlock> </Button>
                <Button FontSize="18" Grid.Column="0" Grid.ColumnSpan="4"  Margin="5,10,5,0" Grid.Row="4" Style="{DynamicResource n}" Foreground="White" Cursor="Hand">Calculator</Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
